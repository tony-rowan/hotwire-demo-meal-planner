<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Calendar</h1>
    <%= link_to 'Plan Meal', new_meal_path, class: "button button--primary" %>
  </div>

  <div id="dates" class="min-w-full">
    <% @dates.each do |date| %>
      <% if meal = @meals[date] %>
        <%= render meal %>
      <% else %>
        <div class="bg-white rounded-md shadow-md p-4 mb-6">
          <p><%= date %></p>
          <p class="italic text-gray-700">Nothing Planned</p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
