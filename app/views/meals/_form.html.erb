<%= turbo_frame_tag "date_#{meal.date}" do %>
  <%= form_with(model: meal, class: "contents") do |form| %>
    <% if meal.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

        <ul>
          <% meal.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="meal">
      <div>
        <%= meal.date %>
        <%= form.hidden_field :date %>
        <%= form.text_field :meal, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="actions">
        <%= form.submit class: "button button--primary" %>
        <%= link_to "Cancel", root_path, class: "button" %>
      </div>
    </div>
  <% end %>
<% end %>
